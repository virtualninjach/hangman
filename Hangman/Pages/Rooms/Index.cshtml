@page
@model Hangman.Pages.Rooms.IndexModel
@{
    ViewData["Title"] = "Game Rooms";
}

<div class="row">
    <div class="col-md-12">
        <h1>🚪 Game Rooms</h1>
        <p>
            <a asp-page="Create" class="btn btn-primary">Create New Room</a>
        </p>

        @if (Model.GameRooms == null || !Model.GameRooms.Any())
        {
            <div class="alert alert-warning">
                No game rooms found. <a asp-page="Create">Create one now!</a>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var room in Model.GameRooms)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@room.Name</h5>
                                <p class="card-text">
                                    <small class="text-muted">Created: @room.CreatedAt.ToLocalTime().ToString("g")</small>
                                </p>
                                <p class="card-text">
                                    <span class="badge bg-info">
                                        @(room.GameRoomPlayers?.Count(p => p.IsInRoom) ?? 0) Players
                                    </span>
                                    <span class="badge bg-secondary">
                                        @(room.GuessWords?.Count ?? 0) Words
                                    </span>
                                </p>
                                <div class="d-flex gap-2">
                                    <a asp-page="Details" asp-route-id="@room.Id" class="btn btn-sm btn-success">
                                        View Details
                                    </a>
                                    <!-- ADD THIS DELETE BUTTON -->
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@room.Id" 
                                          onsubmit="return confirm('Are you sure you want to delete this room? This will delete all associated game data.');"
                                          class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info mt-3">
        @Model.Message
    </div>
}