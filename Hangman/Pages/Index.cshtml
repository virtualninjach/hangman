@page
@model Hangman.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Hangman! 🎯</h1>
    <p class="lead">A classic word-guessing game where you try to guess the word letter by letter.</p>
    
    <div class="row mt-5">
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">👤 Create Player</h5>
                    <p class="card-text">Register yourself to start playing</p>
                    <a asp-page="/Players/Create" class="btn btn-primary">Get Started</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">🚪 Browse Rooms</h5>
                    <p class="card-text">Join an existing game room or create your own</p>
                    <a asp-page="/Rooms/Index" class="btn btn-success">View Rooms</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="alert alert-info">
                <h5>📋 How to Play:</h5>
                <ol class="text-start">
                    <li>Create a player account</li>
                    <li>Join or create a game room</li>
                    <li>The host sets a word to guess</li>
                    <li>Players guess letters one at a time</li>
                    <li>You have 6 lives - don't get hung!</li>
                    <li>Guess all letters correctly to win</li>
                </ol>
            </div>
        </div>
    </div>
</div>